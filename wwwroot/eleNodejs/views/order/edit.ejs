<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">

            <%include ../public/aside%>

        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">轮播图管理
                </li>
                <li class="active">编辑轮播图
                </li>
            </ol>
            <div class="panel panel-default">

                <div class="panel-heading">
                    编辑轮播图
                </div>
                <div class="panel-body">
                    <div class="table-responsive input-form">
                        <form action="/admin/focus/doEdit" method="post" enctype="multipart/form-data">


                            <ul>
                                <input type="hidden" name="id" value="<%=list._id%>"/>

                                <li>  轮播图名称: <input type="text" name="title" value="<%=list.title%>"/></li>
                                <li>  轮播图图标: <input type="file" name="pic" />
                                    <br/>
                                    <img src="/<%=list.pic%>" style="width: 60px;"/>
                                </li>
                                <li>  链接地址: <input type="text" name="url" value="<%=list.url%>"/></li>

                                <li>  状态:  可用 <input type="radio" name="status"  <%if(list.status==1){%>checked<%}%> value="1" /> 　禁用 <input type="radio" name="status"  <%if(list.status==0){%>checked<%}%> value="0" /></li>


                                <li>
                                    <br/>
                                    <button type="submit" class="btn btn-default">提交</button>
                                </li>

                            </ul>


                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>


</body>
