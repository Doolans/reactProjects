.header{
    height:.55rem;
	background: #0096ff;
	position: relative;
}
.header input{
    height:.35rem;
	width: 90%;
    margin:.1rem .2rem;
    border:none;
    border-radius: .2rem;
    outline:none;
}
.header .glass{
	position: absolute;
	left: 8%;
    top: 28%;
    font-size: .23rem;
}


.banner{
	height:1.81rem;
	width:100%;
	background: #fff;
	
	
}

.swiper-container{
	height:108%;
}
.banner ul{
    display: flex;
    flex-wrap: wrap;
    position: relative;
    margin-left:0.07rem;
    border-top: 1px solid #eeeeee;
	
}
.banner ul li{
	width: 20%;
    height:0.7rem;
	display: flex;
    justify-content: center;
     align-items: center;
     margin-top: 0.12rem;
}

.banner ul li a{
			     display: flex;
				 flex-direction: column;
				 justify-content: center;
				  align-items: center;
}

.banner ul li a img{
    width: 0.47rem;
    height: 0.42rem;
    margin-bottom: 0.1rem;

}
.banner ul span{
	display: block;
	width:0.29rem;
	height:0.13rem;
	background:#f95141;
	color:#fff;
	text-align: center;
	line-height: 0.13rem;
	border-radius: 25%;
	position: absolute;
	right:0.72rem;
	top:0.05rem;
}

.imgboxs{
	height:1.11rem;
	width:100%;

	background:#fff;
}
.imgboxs img{
	max-width: 100%;
    margin-top: 0.12rem;
}


.sharelist{
	height: 2.15rem;
	margin-top: .11rem;
}
.sharelist.kkk{
	margin-bottom: .52rem;
}

.sharelist ul{
	width:100%;
	height:50%;
	

}
.sharelist li{

	float: left;
    width: 49%;
    background: #fff;
	margin: .01rem;
}

.sharelist li img{
	height:50%;
	width:50%;
	float: right;
}
.sharelist li span{
    margin-left: .2rem;
    display: inline-block;
	margin-top: 0.3rem;
	font-size: .16rem;
	color:#666;
}
.sharelist li p{
	margin-left: .2rem;
	display:block;
	margin-top: 0.1rem;
	font-size: .2rem;
	color:#000;
}


/* 底部 */


#footer{

	position: fixed;
	bottom: 0px;
	height:0.52rem;
	width:100%;
	background: #fff;
	display: flex;
	align-items: center;
	justify-content: space-around;
}
#footer a{
	height:100%;
	display: flex;
flex:1;
	flex-direction: column;
	align-items: center;
	color:#aaa7a0;

	

}
#footer a i{
	font-size:0.23rem;
	color:#646464;
	margin: .04rem;
}
#footer a:hover{
	display: flex;
	width:0.71rem;
	flex-direction: column;
	align-items: center;
	color:#aaa7a0;
	background: #d9e2fa;
	border-radius: 0.08rem;


}

#footer .sale{
font-size: .23rem;
color:#0096ff;
}
#footer .active{
	color:#0096ff;
}


