.header{
    height:.55rem;
    background: #0096ff;
}
.header input{
    height:.35rem;
    width:3.29rem;
    margin:.1rem .2rem;
    border:none;
    border-radius: .2rem;
    outline:none;
}

#header{
	width:3.75rem;
	background: #fff;

}

.banner{
	height:1.81rem;
	width:3.75rem;
	background: #fff;
	
	
}

.banner ul{
	/* width:3.62rem;
	height:1.41rem; */
    display: flex;
    flex-wrap: wrap;
    position: relative;
    margin-left:0.07rem;
    border-top: 1px solid #eeeeee;
	
}
.banner ul li{
	width:0.72rem;
    height:0.7rem;
	display: flex;
    justify-content: center;
     align-items: center;
     margin-top: 0.12rem;
}

.banner ul li a{
			     display: flex;
				 flex-direction: column;
				 justify-content: center;
				  align-items: center;
}

.banner ul li a img{
    width: 0.47rem;
    height: 0.42rem;
    margin-bottom: 0.1rem;

}
.banner ul span{
	display: block;
	width:0.29rem;
	height:0.13rem;
	background:#f95141;
	color:#fff;
	text-align: center;
	line-height: 0.13rem;
	border-radius: 25%;
	position: absolute;
	right:0.72rem;
	top:0.05rem;
}